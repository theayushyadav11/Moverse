<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:gravity="center"
    android:paddingBottom="70dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_url="https://lottie.host/91623367-1462-48ee-a906-e7f46ec3cc2d/A3gHwm52PW.json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_height="300dp"

        app:lottie_url="https://lottie.host/ddd4df45-2bec-424e-9034-7b6e2e8d9e65/ubvWuFaUqd.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView

        android:padding="10dp"
        android:id="@+id/matter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottieAnimationView"
        android:fontFamily="@font/akaya_kanadaka"
        android:gravity="center"
        android:text="Hello World!"
        android:textSize="28sp"
        android:textStyle="bold|italic" />

    <TextView

        android:id="@+id/matterDis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/matter"
        android:fontFamily="@font/architects_daughter"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hello World!"
        android:textColor="#898581"
        android:textSize="14sp"
        android:textStyle="italic" />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/dot2"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/bg_screen1"
        app:cardCornerRadius="50dp"
       />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/dot3"
        android:layout_width="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="10dp"
        android:layout_toRightOf="@id/dot2"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/dot1"
        android:layout_alignParentBottom="true"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/dot2"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        />

    
</RelativeLayout>